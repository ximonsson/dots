#
# This file contains autostart commands for BSPWM
#

xrdb -merge -I$HOME $HOME/.Xresources
compton -b --config $XDG_CONFIG_HOME/compton.conf
xsetroot -cursor_name left_ptr
xsetroot -solid "#171719"
sxhkd &
dunst &

#
# Monitor settings
#

. $XDG_CONFIG_HOME/bspwm/monitor

# if the external monitor is connected
if [ `cat /sys/class/drm/card0-DP-4/status` == "connected" ]
then
	echo "external monitor connected"
	external "DP-1-2-1"
elif [ 0 ] # check later for dual monitors
then
	echo "two monitors connected"
	echo "TODO"
else # normal mode
	echo "only the internal display connected"
	bspc monitor -d I II III IV V VI VII VIII IX X
fi
