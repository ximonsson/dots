# vim: filetype=muttrc
set my_pass=$my_kth_pass

# imap settings
set imap_user=simonsim
set imap_pass=$my_pass
set folder=imaps://$imap_user@webmail.kth.se/
set spoolfile=+INBOX
set postponed=+Drafts

# smtp settings
set record="+Sent Items"
set realname="Simon Simonsson"
set from="simonsim@kth.se"
set use_from=yes
set smtp_url=smtps://$imap_user:$imap_pass@smtp.kth.se
set ssl_force_tls=yes
set ssl_starttls=yes

mailboxes =INBOX

account-hook $folder "set imap_user=simonsim imap_pass=$my_pass"
